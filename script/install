#!/bin/sh

set -e

cd "$(dirname "$0")/.."

echo "Installing airsonos..."

APP_PATH=`pwd`
USER_NAME=`whoami`

mkdir -p ~/Library/LaunchAgents

cp config/org.airsonos.plist ~/Library/LaunchAgents/org.airsonos.plist

sed -i '' -e "s#%USER%#$USER_NAME#g" ~/Library/LaunchAgents/org.airsonos.plist
sed -i '' -e "s#%PATH%#$APP_PATH#g" ~/Library/LaunchAgents/org.airsonos.plist

launchctl load -w -F ~/Library/LaunchAgents/org.airsonos.plist
